{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/security.css') }}">
{% endblock %}

{% block body %}
    <div class="box-singup">
        <h2>Création d'un compte</h2>
        <p class="small-text">Veuillez saisir vos informations de connexion</p>
        {{ form_start(form) }}
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="box-select">
                                {{ form_widget(form.civilite) }}
                                {{ form_errors(form.civilite) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="box-input">
                                {{ form_widget(form.prenom) }}
                                {{ form_errors(form.prenom) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="box-input">
                                {{ form_widget(form.nom) }}
                                {{ form_errors(form.nom) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="box-input">
                        {{ form_widget(form.email) }}
                        {{ form_errors(form.email) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="box-input">
                        {{ form_widget(form.date_de_naissance) }}
                        {{ form_errors(form.date_de_naissance) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="box-input">
                        {{ form_widget(form.telephone) }}
                        {{ form_errors(form.telephone) }}
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="box-input">
                        {{ form_widget(form.adresse) }}
                        {{ form_errors(form.adresse) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="box-input">
                        {{ form_widget(form.complement) }}
                        {{ form_errors(form.complement) }}
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="box-input">
                        {{ form_widget(form.ville) }}
                        {{ form_errors(form.ville) }}
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="box-input">
                        {{ form_widget(form.cp) }}
                        {{ form_errors(form.cp) }}
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="box-input">
                        {{ form_widget(form.password.first) }}
                        {{ form_errors(form.password.first) }}
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="box-input">
                        {{ form_widget(form.password.second) }}
                        {{ form_errors(form.password.second) }}
                    </div>
                </div>
                <div class="col-md-9">
                </div>
                <div class="col-md-3">
                    <input type="submit" value="Créer">
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('build/Cleave.js') }}"></script>
    <script src="{{ asset('build/CleavePhoneFr.js') }}"></script>
    <script src="{{ asset('build/homeJs.js') }}"></script>
    <script src="{{ asset('build/securityJs.js') }}"></script>

{% endblock %}